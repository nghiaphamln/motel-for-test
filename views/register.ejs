<main class="page registration-page">
  <section class="clean-block clean-form dark">
    <div class="container">
      <div class="block-heading">
        <h2 class="text-info">Đăng ký</h2>
      </div>
      <form action="/register" method="post">
        <div class="mb-3">
          <% if (messages) { %>
            <p style="color: red; font-size: 15px;"> <%= messages %> </p>
        <% } %> 
          <label class="form-label" for="name">Tên</label
          ><input class="form-control item" type="text" id="name" name="fullname"/>
        </div>
        <div class="mb-3">
          <label class="form-label" for="email">Email</label
          ><input class="form-control item" type="email" id="email" name="email"/>
        </div>
        <div class="mb-3">
          <label class="form-label" for="password">Mật khẩu</label
          ><input class="form-control item" type="password" id="password" name="password"/>
        </div>
        <button class="btn btn-login" type="submit">Đăng ký</button>
      </form>
    </div>
  </section>
</main>
